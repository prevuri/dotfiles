# dotfiles path
export DOT=$HOME/Documents/dotfiles

# my projects folder
export PROJECTS=~/Documents/Projects

# path to node.js
export NODE_PATH="/usr/local/lib/node"

# source .zsh files in dotfiles
for conf_file ($DOT/**/*.zsh) source $conf_file

